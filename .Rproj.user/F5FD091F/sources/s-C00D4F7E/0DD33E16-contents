## 1.8 位置调整
library(tidyverse)
ggplot(data=diamonds)+
  geom_bar(mapping=aes(x=cut,color=cut))
ggplot(data=diamonds)+
  geom_bar(mapping=aes(x=cut,fill=cut))
#以上5行，展示color是描边，fill才是填充颜色
ggplot(data=diamonds)+
  geom_bar(mapping=aes(x=cut,fill=clarity))
ggplot(data=diamonds,mapping=aes(x=cut,fill=clarity))+
  geom_bar(alpha=1,position = 'identity')
ggplot(data=diamonds,mapping=aes(x=cut,fill=clarity))+
  geom_bar(alpha=1/5,position = 'identity')
ggplot(data=diamonds,mapping=aes(x=cut,color=clarity))+
  geom_bar(fill=NA,position = 'identity')
#以上8行，展示position='identity'会将每个对象直接显示在图中,导致遮蔽
#所以需要调整透明度alpha或fill=NA

ggplot(data=diamonds)+
  geom_bar(mapping=aes(x=cut,fill=clarity),position='fill')
#以上2行，展示position='fill'效果是同一高度下按比例填充

ggplot(data=diamonds,mapping=aes(x=cut,fill=clarity))+
  geom_bar(alpha=1,position = 'dodge2')
#以上2行，展示position='dodge'是将条形依次并列躲避重叠

ggplot(data=ggplot2::mpg)+
  geom_point(mapping=aes(x=displ,y=hwy),position = 'jitter')
ggplot(data=ggplot2::mpg)+
  geom_point(mapping=aes(x=displ,y=hwy))
#以上4行，展示position = 'jitter'后防止散点图overplotting过绘制，能显示每一个点的原状

ggplot(data=ggplot2::mpg)+
  geom_jitter(mapping=aes(x=displ,y=hwy))
#以上2行，展示position = 'jitter'的快速语法geom_jitter

?position_stack
df <- tibble::tribble(
  ~x, ~y, ~grp,
  "a", 1,  "x",
  "a", 2,  "y",
  "b", 1,  "x",
  "b", 3,  "y",
  "b", -1, "y"
)
ggplot(data = df, aes(x, y, group = grp)) +
  geom_col(aes(fill = grp), position = position_stack(reverse = TRUE)) +
  geom_hline(yintercept = 0)
ggplot(data = df, aes(x, y, group = grp)) +
  geom_col(aes(fill = grp)) +
  geom_hline(yintercept = 0)
# 以上15行，展示position = position_stack(reverse = TRUE)

?position_nudge
#调整标签位置

### 1.8.1 练习
ggplot(data=ggplot2::mpg,mapping=aes(x=cty,y=hwy))+
  geom_point(position = 'jitter')

?geom_jitter

ggplot(data=ggplot2::mpg,mapping=aes(x=cty,y=hwy))+
  geom_count()
#以上6行，展示jitter是展示每一个点，count会合计后再展示

ggplot(data=ggplot2::mpg)+
  geom_boxplot(mapping=aes(x=class,y=hwy),position = 'dodge')

## 1.9 坐标系
