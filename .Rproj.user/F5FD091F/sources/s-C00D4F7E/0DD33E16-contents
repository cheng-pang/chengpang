#######################
foo <- c(4.3,2.2,NULL,2.4,NaN,3.3,3.1,NULL,3.4,NA)
foo
length(foo) == 8
which(x=is.na(x=foo)) == c(4,8)
is.null(x=foo)
is.na(x=foo[8])+4/NULL
myvec_b <- list(c(7,7,NA,1,1,5,NA))
names(myvec_b) <- "alpha"
myvec_b
is.null(myvec_b$beta)
myvec_b$beta <- which(is.na(x=myvec_b$alpha))
myvec_b
