#1.加载数据
library(survival)
force(colon) #或者colon，但不能是data(colon)，因为colon在survival包中是function形式，不是dataset形式
colon <- colon[1:11,1:11]
# 2.查看数据
str(colon) # Structure 结构
attributes(colon) # 属???
dput(names(colon)) #dput函数一个动作同时完成了1.赋值到1个对???2.输出到file???2个动作，提高了效???
# 3.数据类型转化
class(colon$sex)
colon$sex <- as.factor(colon$sex)
is.factor(colon$sex) #查看是否是因子变???
# 3.1 批量转化变量为因子型
vars <- c("sex","obstruct","perfor","adhere","status","differ")
colon[vars] <- lapply(colon[vars],factor) ??imput
str(colon)
# 3.2 插入缺失???
colon$age[c(1,4)] <- NA
colon$nodes[c(1,4)] <- NA
# 4.重命名列变量
names(colon)[1:2] <- c("ID","STUDY")
names(colon)
# 5.创建新变???
mytest <- data.frame(id= c(1,2,3,4,5),
                     weight= c(45,50, 55, 60 ,58),
                     height= c(165,155,157,169,158)
)
options(digits=4) #设定有效数字4位数,即小数点后保???2???
mytest <- transform(mytest,BMI=(weight/((height/100)^2))) 
# transform作用:为原数据框添加新的列，改变原变量列的值，通过赋值NULL删除列变???
# transform(airquality,Wind=NULL) # 删除原数据集中的Wind???
# transform可以用within函数代替，因为within还可以用在不是dataframe的内容里，上面的例子可以用within改写:
# within(airquality,{new.col=Wind^2;rm(Wind);Wind=Wind^2})
#这里需要注意的是大括号里不同的任务要用分好";"隔开，不能用逗号，后者就是两个任务在两行中，rm(变量???)和变量名=NULL是等价的，都是删除该???
mytest

# 6. 删除列变??? 
mytest1 <- subset(mytest, select = -weight) 
mytest1
mytest2 <- subset(mytest, select = c(-weight,-height))
mytest2

# 7. 列变量重排序
colon <- colon[c(1,2,4,3,5,6,7,8,9,10,11)]
head(colon,3)

colon <- colon[c(1:4,7,5,6,8:11)]
head(colon,5)
#以上2行，当列很多，仅需调换几列时快速调换的方法

# 8. 行观测重排序
# 8.1 升序排列
library(dplyr)
arrange(colon, age)
arrange(colon, age, nodes)
# 以上三行，arrange函数将colon集age变量先升序排列，再nodes升序排序

# 8.2 降序排列
arrange(colon, desc(age))
arrange(colon, desc(age), desc(nodes))
arrange(colon,desc(age),nodes) #先age降序，再nodes升序排列

# 8.3 缺失值排???
arrange(colon,desc(is.na(nodes))) #把缺失值排前面
arrange(colon,desc(is.na(nodes)),nodes) #把缺失值排前面,同时升序排列

# 9. 数据筛选子???
# 9.1 筛选行数据
test <- subset(colon, rx == "Obs")
test
test1 <- subset(colon, rx == "Obs" & age >= 60)
test1

library(dplyr)
test <- filter(colon, rx== "Obs")
test
test1 <- filter(colon, rx== "Obs" & age >= 60)
test1 #filter函数是dplyr包中的筛选功???

# 9.2 筛选行变量的同时筛选列变量
test2 <- subset(colon, rx=="Obs" & age>= 60,
                select = c(age,obstruct,perfor,adhere,nodes)
)
test2

test3 <- subset(colon, rx== "Obs" & age>= 50,
                select = c(1:4,8:11)
)
test3
#以上4行，快速选取列变???

# 10. 修改因子水平顺序
colon$rx <- factor(colon$rx, order=TRUE,levels=c('Lev','Obs','Lev+5FU'))
levels(colon$rx)
#以上2行，设置因子水平顺序
colon$rx <- factor(colon$rx, levels=rev(levels(colon$rx)))
levels(colon$rx)
#以上2行，rev参数用于颠倒因子水平顺???

# 11.修改因子水平名称
#install.packages('plyr')
library(plyr)
colon$rx <- revalue(colon$rx,c("Obs" = "观察???",
                               "Lev" = 'Lev???',
                               'Lev+5FU'= 'Lev+5-FU???'
))
colon
#注意以上6行，1.包是plyr包；2.revalue函数仅在plyr包中???

# 12. 连续变量转分类变???
colon <- within(colon,{
  agecat <- NA #先全部赋值NA
  agecat[age>75] <- "Elder"
  agecat[age>=55&age<=75] <- "Middle"
  agecat[age<55] <- "Young"
})
colon

# 13. 分类变量转分类变???
oldvals <- c('观察???','Lev???','Lev+5-FU???')
newvals <- factor(c("观察???","治疗???","治疗???"))
colon$newrx <- newvals[match(colon$rx,oldvals)] # match函数返回位置索引???-> 1.判断前一个值是否在后一个中???2.返回的是后一个中???'位置索引???'！不是实际???
head(colon[,-c(1:6)])

# 14. 宽数据wild转为长数据long
mydata <- data.frame(
  id = c(1,2,3,4,5),
  age = c(56,45,74,56,54),
  testA = c(25,26,56,28,36),
  testB = c(15,29,36,48,52)
)
mydata

# install.packages('reshape2')
library(reshape2)
mytest <- melt(mydata,
               id.vars=c(1:2),
               measure.vars= c("testA","testB"),
               variable.name= "group",
               value.name="value"
)
mytest

# 15. 长数据变宽数???
library(reshape2)
mytest1 <- dcast(data = mytest,
                 formula = id+ age ~ group,
                 value.var = "value"
)
mytest1
#以上6行展示reshape2包中的dcast用法，基本同reshape包中的cast

# 16. 数据集横向合并添加列 merge()
testA <- data.frame(id=c(1,2,3,4,5),
                    study=c(1,3,5,9,8),
                    age=c(56,45,74,56,54)
)
testB <- data.frame(id=c(1,2,3,4,5),
                    study=c(1,3,5,9,8),
                    sex=c(1,2,1,2,2)
)
total <- merge(testA,testB,
               by="id")
total
total1 <- merge(testA,testB,
                by=c("id",'study'))
total1
total2 <- cbind(testA,testB)
total2

# 17. 数据集纵向合并添加行 rbind()
testA <- data.frame(id=c(1,2,3,4,5),
                    study=c(1,3,5,9,8),
                    age=c(56,45,74,56,54)
)
testB <- data.frame(id=c(1,2,3,4,5),
                    study=c(1,8,9,10,18),
                    age=c(45,52,61,72,82)
)
total3 <- rbind(testA,testB)
total3
#以上10行，展示rbind函数，注意点???1.必须有相同数量的列，但列顺序不必相同???2.列数量不同时???2.1删除testA中多余列???2.2或testB中追加变量列并设置为NA

# 18. 缺失值处???
# NA,NaN,Inf,-Inf,is.na(),is.nan(),is.infinite() 用于缺失???

# 18.1 重编码某些值为缺失???
colon$age[colon$age== 99] <- NA #???99岁的都修改为NA
# 18.2 在分析时排除缺失???
x <- c(1,2,NA,3)
y <- sum(x,na.rm = TRUE)

newcolon <- na.omit(colon)
newcolon
#以上2行，展示na.omit将有缺失值的行都删除
colon[complete.cases(colon),]
colon[!complete.cases(colon),]
#以上2行，展示comple.cases函数与na.omit相同的效???



