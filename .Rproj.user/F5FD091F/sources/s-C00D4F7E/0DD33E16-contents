pairs(iris[,1:4],pch=iris_pch,col=iris_col,cex=0.75,lower.panel = NULL)
pairs(iris[,1:4],pch=iris_pch,col=iris_col,cex=0.75,upper.panel = NULL) #以上2行，仅显示对角线的一???
