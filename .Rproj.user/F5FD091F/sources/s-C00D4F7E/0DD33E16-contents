xdata <- c(2,2,2,2.2,3,3,4,4.4)
ydata <- c(1,4.4,1,3,2,2.2,2,7)
mean(xdata)
mean(ydata) #以上4行，演示2个数据集的均数是一致的
plot(xdata,type = "n",xlab = "",ylab = "data vector",yaxt="n",bty="n") #yaxt="n"不绘制Y???,bty="n"不绘制边???
abline(h=c(3,3.5),lty=2,col="grey")
abline(v=2.825,lwd=2,lty=3,col="gray")
text(c(0.8,0.8),c(3,3.5),labels = c("x","y"))
points(jitter(c(xdata,ydata)),c(rep(3,length(xdata)),rep(3.5,length(ydata)))) #以上5行，说明连续变量的点的离散趋势，jitter轻微抖动相同的观测???

var(xdata) #以上1行，计算方差
sd(xdata) #以上1行，计算标准???
IQR(xdata)#以上1行，计算四分位间???
sqrt(var(xdata))  #以上1行，计算标准???
as.numeric(quantile(xdata,0.75)-quantile(xdata,0.25)) #以上1行，计算四分位间???,as.numeric用于删除quantile函数的百分数注释
sd(ydata) #以上1行，计算标准???
IQR(ydata)#以上1行，计算四分位间???
sd(chickwts$weight) #以上1行，计算标准???
summary(quakes$mag[quakes$depth<400]) #以上1行，演示表达连续变量的离散趋???
IQR(quakes$mag[quakes$depth<400]) #以上1行，计算四分位间???

