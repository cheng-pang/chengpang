myvec_d2 <- cut(x=myvec_d,breaks = myvec_d1,right = TRUE,include.lowest = TRUE,labels=c("Low","Moderate","High"))
myvec_d2
myvec_d2[myvec_a1.char.fac=="Labour"]
myvec_d2[myvec_a1.char.fac=="National"]

